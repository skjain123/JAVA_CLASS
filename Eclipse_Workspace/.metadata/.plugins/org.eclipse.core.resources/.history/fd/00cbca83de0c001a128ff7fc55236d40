package skj;

import robocode.HitWallEvent;
import robocode.ScannedRobotEvent;
import robocode.TeamRobot;

public class MyRobot extends TeamRobot {
	public void run() {
		double move = Math.max(getBattleFieldHeight(), getBattleFieldWidth());
		turnLeft(getHeading() % 90);
		ahead(move);
		turnGunRight(90);
		turnRight(90);
		
		while (true) {
			ahead(move);
			turnRight(90);
		}
	}
	
	public void onScannedRobot (ScannedRobotEvent e) {
		if (e.getDistance() > 700) {
			while (e.getDistance() > 500) {
				scan();
				turnRight(e.getBearing());
				fire(1);
				//ahead(130);
				fire(1);
				//ahead(130);
			}
		} else if (e.getDistance() > 500 && e.getDistance() < 700) {
			turnRight(e.getBearing());
			fire(3);
		} else if (e.getDistance() > 250 && e.getDistance() < 500) {
			turnRight(e.getBearing());
			fire(2);
		} else if (e.getDistance() < 250) {
			turnRight(e.getBearing());
			fire(1);
		}
		scan();
		turnRight(e.getBearing());
		//ahead(100);
	}
}
