package skj;

import robocode.ScannedRobotEvent;
import robocode.TeamRobot;

public class MyRobot extends TeamRobot {
	double prevEnergy = 100;
	
	double eBearings = 0;
	
	public void run() {
		while (true) {
			turnRadarRight(360);
			turnRight(90);
			ahead(100);
		}
	}
	
	public void approach(double b) {
		System.out.println(b);
		turnRight(b);
		turnLeft(65);
		ahead(120);
		turnRight(65 * 2);
		ahead(120);
	}
	
	public void onScannedRobot (ScannedRobotEvent e) {
		/*
		eBearings = e.getBearing();
		turnRight(eBearings = 90);
		
		turnRadarLeft(eBearings + 45);
		prevEnergy = e.getEnergy();
		turnRadarLeft(360);
		*/
		
		if (e.getDistance() > 700) {
			approach(e.getBearing());
		} else if (e.getDistance() > 500 && e.getDistance() < 700) {
			turnRight(eBearings);
			fire(1);
		} else if (e.getDistance() > 250 && e.getDistance() < 500) {
			turnRight(eBearings);
			fire(2);
		} else if (e.getDistance() < 250) {
			turnRight(eBearings);
			fire(3);
		}
		ahead(110);
	}
}
